generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid())
  profilePicture String?
  name           String?
  lastName       String?
  username       String   @unique
  email          String?  @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  links  Links[]
  movies Movies[]
}

model Links {
  id       String @id @default(uuid())
  title    String
  category String
  url      String
  order    Int
  icon     String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, order])
  @@unique([userId, url])
}

model Movies {
  id        String   @id @default(uuid())
  title     String
  image     String
  link      String
  createdAt DateTime @default(now())
  order     Int
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, link])
  @@unique([userId, order])
}
